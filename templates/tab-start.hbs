<div class='tab {{tabs.start.cssClass}}' data-tab='start' data-group='hero-mancer-tabs'>
  <fieldset>
    <legend>{{localize 'hm.app.start.tooltip'}}</legend>

    <p>{{localize 'hm.app.start.preamble.a'}}</p>
    <p>{{localize 'hm.app.start.preamble.b'}}</p>
    <hr />

    <!-- Character Name Row -->
    <div class='form-row'>
      <label for='character-name' class='label-15'>{{localize 'hm.app.start.name-label'}}</label>
      <input
        id='character-name'
        type='text'
        name='name'
        class='input-35'
        data-dtype='String'
        data-type='character-name'
        placeholder='{{localize "hm.app.start.name-placeholder"}}'
        aria-label='{{localize "hm.app.start.name-label"}}'
      />
    </div>

    <!-- Character Art Selection Row -->
    <div class='art-selection-row'>
      <label for='character-art-path' class='label-15'>{{localize 'hm.app.start.character-art-label'}}</label>
      <input id='character-art-path' type='text' name='character-art' class='art-input input-35' readonly placeholder='{{localize "hm.app.start.character-art-placeholder"}}' />
      <button data-action='selectCharacterArt' type='button' class='select-button button-7'>{{localize 'hm.app.start.select-art'}}</button>
      <label class='checkbox-label label-43'>
        <input type='checkbox' id='link-token-art' checked />
        {{localize 'hm.app.start.token-same-as-character'}}
      </label>
    </div>

    <!-- Token Art Selection Row -->
    <div class='art-selection-row' id='token-art-row' style='display: none;'>
      <label for='token-art-path' class='label-15'>{{localize 'hm.app.start.token-art-label'}}</label>
      <input id='token-art-path' type='text' name='token-art' class='art-input input-35' readonly placeholder='{{localize "hm.app.start.token-art-placeholder"}}' />
      <button data-action='selectTokenArt' type='button' class='select-button button-7'>{{localize 'hm.app.start.select-art'}}</button>
    </div>
  </fieldset>
</div>