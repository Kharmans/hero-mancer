<div class='tab {{tabs.class.cssClass}}' data-tab='class' data-group='creator-tabs'>
  <fieldset>
    <legend>{{localize 'cc.creator.class.tooltip'}}</legend>
    <p>{{localize 'cc.creator.class.preamble'}}</p>
    <hr />
    <div class='cc-creator-div'>
      {{localize 'cc.creator.class.select'}}
      <!-- Class Dropdown -->
      <select id='class-dropdown' class='cc-creator-dropdown class'>
        <option value=''>{{localize 'cc.creator.class.select'}}</option>
        {{#each classDocuments}}
          <option value='{{this.id}}' data-pack='{{this.packId}}'>
            {{this.name}}
          </option>
        {{else}}
          <option>{{localize 'cc.creator.class.none'}}</option>
        {{/each}}
      </select>
    </div>

    <!-- Enriched Description Section for the selected class -->
    <div id='class-description' class='cc-creator-description'>
      {{{enrichedDescription}}}
      <!-- Display the enriched description here -->
    </div>
  </fieldset>
</div>