<div id="creator-form" class="{{abrv}}-form">
  <!-- Main Race Dropdown -->
  <div class="dropdown-container">
    <select id="race-dropdown" class="{{abrv}}-creator-dropdown race">
      <option value="">{{localize "CCreator.Creator.SelectRace"}}</option>
      {{#each race}}
        {{#if hasMultipleItems}}
          <option value="folder-{{folderName}}">{{folderName}}</option>
        {{else}}
          {{#each items}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        {{/if}}
      {{/each}}
    </select>
    <!-- Subcategory Dropdown (Empty by default, dynamically updated) -->
    <div id="race-subcategory-dropdown-container"></div>
  </div>

  <!-- Main Class Dropdown -->
  <div class="dropdown-container">
    <select id="class-dropdown" class="{{abrv}}-creator-dropdown class">
      <option value="">{{localize "CCreator.Creator.SelectClass"}}</option>
      {{#each class}}
        {{#if hasMultipleItems}}
          <option value="folder-{{folderName}}">{{folderName}}</option>
        {{else}}
          {{#each items}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        {{/if}}
      {{/each}}
    </select>
    <div id="class-subcategory-dropdown-container"></div>
  </div>

  <!-- Main Background Dropdown -->
  <div class="dropdown-container">
    <select id="background-dropdown" class="{{abrv}}-creator-dropdown background">
      <option value="">{{localize "CCreator.Creator.SelectBackground"}}</option>
      {{#each background}}
        {{#if hasMultipleItems}}
          <option value="folder-{{folderName}}">{{folderName}}</option>
        {{else}}
          {{#each items}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        {{/if}}
      {{/each}}
    </select>
    <div id="background-subcategory-dropdown-container"></div>
  </div>

  <div class="{{abrv}}-creator-actions">
    <button type="submit" class="{{abrv}}-creator-submit">{{localize "CCreator.Creator.Submit"}}</button>
    <button type="cancel" class="{{abrv}}-creator-cancel">{{localize "CCreator.Creator.Cancel"}}</button>
  </div>
</div>
