<div class='tab {{tabs.finalize.cssClass}}' data-tab='finalize' data-group='hero-mancer-tabs'>
  <fieldset>
    <legend>{{localize 'hm.app.finalize.tooltip'}}</legend>

    {{! Character Summary }}
    <div class='summary-section grid gap-md mb-md'>
      <div class='character-portrait flex flex-col items-center gap-xs'>
        <img alt='{{localize "hm.app.finalize.character-portrait"}}' />
        <span class='character-name text-lg'>{{name}}</span>
      </div>
      <div class='character-summary p-sm'>
        <span class='background-summary'>Starting as <a data-action='switchToTab' data-tab='background'>an
            adventurer</a>,</span>
        <span class='class-race-summary'>this
          <a data-action='switchToTab' data-tab='race'>unknown race</a>
          <a data-action='switchToTab' data-tab='class'>unknown class</a></span>
        <span class='abilities-summary'>prides themself on their impressive abilities</span>
        <span class='equipment-summary'>and begins their adventure.</span>
      </div>
    </div>

    {{! Character Details }}
    <section class='character-details-section'>
      <h2>{{localize 'hm.app.finalize.character-details'}}</h2>
      <div class='character-details-row grid grid-2-col gap-md'>
        <div class='form-group flex flex-col gap-xs'>
          <label>{{localize 'DND5E.Alignment'}}</label>
          <select name='alignment' class="form-select">
            <option value=''>{{localize 'None'}}</option>
            {{#each alignments}}
              <option value='{{this}}'>{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class='form-group flex flex-col gap-xs'>
          <label>{{localize 'DND5E.Faith'}}</label>
          <select name='faith' class="form-select">
            <option value=''>{{localize 'None'}}</option>
            {{#each deities}}
              <option value='{{this}}'>{{this}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </section>

    {{! Physical Characteristics }}
    <section class='physical-char-section'>
      <h2>{{localize 'hm.app.finalize.physical-characteristics'}}</h2>
      <div class='physical-traits-grid grid grid-7-col gap-md mb-sm'>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Eyes'}}</label>
          <input type='text' name='eyes' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Hair'}}</label>
          <input type='text' name='hair' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Skin'}}</label>
          <input type='text' name='skin' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Height'}}</label>
          <input type='text' name='height' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Weight'}}</label>
          <input type='text' name='weight' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Age'}}</label>
          <input type='text' name='age' class="form-input" />
        </div>
        <div class='trait-group flex flex-col items-center gap-xs text-center'>
          <label>{{localize 'DND5E.Gender'}}</label>
          <input type='text' name='gender' class="form-input" />
        </div>
      </div>
      <div class='description-group mt-md'>
        <label>{{localize 'hm.app.finalize.physical-description'}}</label>
        <div class='description-input flex gap-md'>
          <textarea name='appearance' rows='3'></textarea>
        </div>
      </div>
    </section>

    {{! Personal Characteristics }}
    <section class='personal-char-section'>
      <h2>{{localize 'hm.app.finalize.personal-characteristics'}}</h2>
      <div class='personality-grid grid gap-md'>
        <div class='personality-group'>
          <label>{{localize 'hm.app.finalize.personality-traits'}}</label>
          <div class='input-with-roll flex gap-md'>
            <textarea name='traits' placeholder='{{localize "hm.app.finalize.traits-placeholder"}}'></textarea>
            <button type='button' class='roll-btn flex items-center gap-xs' data-table='traits'>
              <i class='fas fa-dice'></i>
              {{localize 'DND5E.Roll'}}
            </button>
          </div>
        </div>
        <div class='personality-group'>
          <label>{{localize 'DND5E.Ideals'}}</label>
          <div class='input-with-roll flex gap-md'>
            <textarea name='ideals' placeholder='{{localize "hm.app.finalize.ideals-placeholder"}}'></textarea>
            <button type='button' class='roll-btn flex items-center gap-xs' data-table='ideals'>
              <i class='fas fa-dice'></i>
              {{localize 'DND5E.Roll'}}
            </button>
          </div>
        </div>
        <div class='personality-group'>
          <label>{{localize 'DND5E.Bonds'}}</label>
          <div class='input-with-roll flex gap-md'>
            <textarea name='bonds' placeholder='{{localize "hm.app.finalize.bonds-placeholder"}}'></textarea>
            <button type='button' class='roll-btn flex items-center gap-xs' data-table='bonds'>
              <i class='fas fa-dice'></i>
              {{localize 'DND5E.Roll'}}
            </button>
          </div>
        </div>
        <div class='personality-group'>
          <label>{{localize 'DND5E.Flaws'}}</label>
          <div class='input-with-roll flex gap-md'>
            <textarea name='flaws' placeholder='{{localize "hm.app.finalize.flaws-placeholder"}}'></textarea>
            <button type='button' class='roll-btn flex items-center gap-xs' data-table='flaws'>
              <i class='fas fa-dice'></i>
              {{localize 'DND5E.Roll'}}
            </button>
          </div>
        </div>
      </div>
    </section>

    {{! Notes }}
    <section class='notes-section'>
      <h2>{{localize 'hm.app.finalize.backstory'}}</h2>
      <div class='notes-grid grid gap-md'>
        <div class='notes-group'>
          <prose-mirror name='backstory' data-placeholder='{{localize "hm.app.finalize.backstory-placeholder"}}'>
          </prose-mirror>
        </div>
      </div>
    </section>
  </fieldset>
</div>
